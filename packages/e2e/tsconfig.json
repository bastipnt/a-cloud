{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "target": "ES2021",
    "types": ["bun-types"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node"
  },

  "baseUrl": ".",
  "paths": {
    "@acloud/testing/*": ["../testing/*"]
  },
  "include": ["**/*.ts"]
}
